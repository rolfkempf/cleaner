{
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#b1e3f2",
    "activityBar.background": "#b1e3f2",
    "activityBar.foreground": "#15202b",
    "activityBar.inactiveForeground": "#15202b99",
    "activityBarBadge.background": "#e45bc4",
    "activityBarBadge.foreground": "#15202b",
    "commandCenter.border": "#15202b99",
    "sash.hoverBorder": "#b1e3f2",
    "statusBar.background": "#86d3ea",
    "statusBar.foreground": "#15202b",
    "statusBarItem.hoverBackground": "#5bc3e2",
    "statusBarItem.remoteBackground": "#86d3ea",
    "statusBarItem.remoteForeground": "#15202b",
    "titleBar.activeBackground": "#86d3ea",
    "titleBar.activeForeground": "#15202b",
    "titleBar.inactiveBackground": "#86d3ea99",
    "titleBar.inactiveForeground": "#15202b99"
  },
  "peacock.color": "#86d3ea",

  // Format on Save settings
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": true,
    "source.fixAll": true
  },

  // C# specific settings
  "[csharp]": {
    "editor.defaultFormatter": "ms-dotnettools.csharp"
  },

  // Enable .editorconfig support
  "editor.tabSize": 4,
  "editor.detectIndentation": false
}
